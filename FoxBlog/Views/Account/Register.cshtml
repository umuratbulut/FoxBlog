@model FoxBlog.Entities.Concrete.Author

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="tittle">Kayıt Ol</h3>
<div class="row inner-sec">
    <div class="login p-5 bg-light mx-auto mw-100">

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, "/kayit"))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(x => x.City, "Şehir")
                @Html.DropDownListFor(x => x.City, (List<SelectListItem>)ViewBag.City, "Seçiniz...", new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Name, "Adınız")
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Name, "", new { @style = "color:#ff4040" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Surname, "Soyadınız")
                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Surname, "", new { @style = "color:#ff4040" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Email, "E-mail Adresiniz")
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "email" })
                @Html.ValidationMessageFor(x => x.Email, "", new { @style = "color:#ff4040" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Password, "Şifreniz")
                @Html.PasswordFor(x => x.Password, new { @class = "form-control", @type = "password" })
                @Html.ValidationMessageFor(x => x.Password, "", new { @style = "color:#ff4040" })
            </div>
            
            <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
            <p>
                <a href="#">
                    <i class="fa fa-info-circle"></i> Kaydol'a tıklayarak, şartlarınızı kabul ediyorum.
                </a>
            </p>
        }
    </div>
</div>

